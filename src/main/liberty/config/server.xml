<server description="Sample Liberty server">
    <featureManager>
        <feature>beanValidation-3.0</feature>      
        <feature>mpConfig-3.0</feature>
        <feature>passwordUtilities-1.0</feature>
        <feature>restfulWS-3.1</feature>
        <feature>cdi-4.0</feature>
        <feature>jsonb-3.0</feature>
    </featureManager>
    
    <httpEndpoint host="*" httpPort="${default.http.port}" httpsPort="${default.https.port}" id="defaultHttpEndpoint"/>

    <webApplication location="CloudantSample.war" contextRoot="/"/>
    <variable name="cloudant.apikey" value="${API_KEY}"/>
    <variable name="cloudant.host" value="${HOST}"/>
    <variable name="cloudant.dbname" value="admin"/> <!-- Use admin to avoid configuring the container with users-->

</server>
